{
  "name": "my-neighborhood",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/src/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm ci",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build",
    "test": "npm run test:server && npm run test:client",
    "testCI": "npm run test:server && npm run test:clientCI",
    "test:server": "npx cross-env NODE_ENV=test mocha --exit",
    "test:client": "cd client && npm run test",
    "test:clientCI": "cd client && npx cross-env CI=0 npm run test",
    "lint": "eslint --quiet"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "concurrently": "^4.1.0",
    "mocha": "^6.2.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "bcrypt": "^5.0.0",
    "bcrypt-nodejs": "0.0.3",
    "bootstrap": "^4.3.1",
    "cheerio": "^1.0.0-rc.3",
    "cookie-parser": "^1.4.4",
    "dotenv": "^8.1.0",
    "express": "^4.16.3",
    "express-session": "^1.16.2",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.4",
    "mongoose": "^5.7.5",
    "passport-local": "^1.0.0",
    "react-bootstrap": "^1.0.0-beta.11",
    "winston": "^3.2.1"
  }
}
